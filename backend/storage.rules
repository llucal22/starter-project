// storage.rules
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isJournalist() {
      return request.auth != null
        && (request.auth.token.role in ['journalist','admin']);
    }

    // Thumbnails
    match /media/articles/{fileName} {
      allow read: if true;
      allow write: if isJournalist()
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
